<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_editar_aplicativo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarAplicativo">

    <EditText
        android:id="@+id/et_nombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/et_version"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Versión"
        app:layout_constraintTop_toBottomOf="@id/et_nombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/et_fecha_actualizacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Fecha de Actualización (YYYYMMDD)"
        app:layout_constraintTop_toBottomOf="@id/et_version"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/et_tamano_mb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Tamaño en MB"
        app:layout_constraintTop_toBottomOf="@id/et_fecha_actualizacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/cb_es_gratuito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Es Gratuito"
        app:layout_constraintTop_toBottomOf="@id/et_tamano_mb"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        app:layout_constraintTop_toBottomOf="@id/cb_es_gratuito"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
