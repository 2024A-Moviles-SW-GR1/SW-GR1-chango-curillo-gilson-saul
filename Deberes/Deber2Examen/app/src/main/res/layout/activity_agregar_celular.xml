<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_agregar_celular"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarCelular"
    android:padding="16dp">

    <EditText
        android:id="@+id/et_marca"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Marca"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_modelo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Modelo"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_marca"
        app:layout_constraintBottom_toTopOf="@id/et_anio_lanzamiento"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/et_anio_lanzamiento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="AÃ±o de Lanzamiento"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_modelo"
        app:layout_constraintBottom_toTopOf="@id/et_precio"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/et_precio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Precio"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_anio_lanzamiento"
        app:layout_constraintBottom_toTopOf="@id/et_latitud"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/et_latitud"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Latitud"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_precio"
        app:layout_constraintBottom_toTopOf="@id/et_longitud"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/et_longitud"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Longitud"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_latitud"
        app:layout_constraintBottom_toTopOf="@id/cb_es_5g"
        android:layout_marginTop="16dp" />

    <CheckBox
        android:id="@+id/cb_es_5g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Es 5G"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_longitud"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/bt_guardar_celular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cb_es_5g"
        android:layout_marginTop="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>


