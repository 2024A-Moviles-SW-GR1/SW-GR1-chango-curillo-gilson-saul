<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_agregar_aplicativo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarAplicativo">

    <EditText
        android:id="@+id/et_nombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:padding="16dp" />

    <EditText
        android:id="@+id/et_version"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Versión"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_nombre" />

    <EditText
        android:id="@+id/et_fecha_actualizacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Fecha de Actualización"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_version"
        android:layout_marginTop="16dp"
        android:padding="16dp" />

    <EditText
        android:id="@+id/et_tamano"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Tamaño (MB)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_fecha_actualizacion"
        android:layout_marginTop="16dp"
        android:padding="16dp" />

    <CheckBox
        android:id="@+id/cb_es_gratuito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Es Gratuito"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_tamano"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/bt_guardar_aplicativo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cb_es_gratuito"
        android:layout_marginTop="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
